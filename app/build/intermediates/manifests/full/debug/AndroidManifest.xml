<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="flaregradle.myapp.com.flare"
    android:versionCode="19"
    android:versionName="1.9" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="flaregradle.myapp.com.flare.FlareHome"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="flaregradle.myapp.com.flare.LoadScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="flaregradle.myapp.com.flare.SendFlareActivity"
            android:label="@string/title_activity_send"
            android:parentActivityName="flaregradle.myapp.com.flare.FlareHome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="flaregradle.myapp.com.flare.FlareHome" />
        </activity>

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.MyApp.Flare.FlareHome" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- release key -->
        <!--
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyB-05hWM_Jk9m9XunzQkjsWmzK6S4NTdFY" />
        -->
        <!-- Debug key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyB-MGunwsr3DX2H70xAAse6VJ2S7hLu440" />

        <receiver
            android:name="flaregradle.myapp.com.flare.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="flaregradle.myapp.com.flare" />
            </intent-filter>
        </receiver>

        <service android:name="flaregradle.myapp.com.flare.Services.GcmIntentService" />
        <service android:name="flaregradle.myapp.com.flare.Services.NotificationDeclineService" />
        <service android:name="flaregradle.myapp.com.flare.Services.NotificationAcceptService" />

        <activity
            android:name="flaregradle.myapp.com.flare.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="flaregradle.myapp.com.flare.FlareHome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="flaregradle.myapp.com.flare.FlareHome" />
        </activity>
        <activity
            android:name="flaregradle.myapp.com.flare.GroupsActivity"
            android:label="@string/title_activity_groups"
            android:parentActivityName="flaregradle.myapp.com.flare.FlareHome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="flaregradle.myapp.com.flare.FlareHome" />
        </activity>
        <activity
            android:name="flaregradle.myapp.com.flare.CreateGroupActivity"
            android:label="@string/title_activity_create_group"
            android:parentActivityName="flaregradle.myapp.com.flare.GroupsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="flaregradle.myapp.com.flare.GroupsActivity" />
        </activity>
    </application>

</manifest>