        <activity
            android:name="flaregradle.myapp.com.Flare.Activities.VerifyPhoneActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="flaregradle.myapp.com.Flare.Activities.SettingsSetup"
            android:label="@string/title_activity_settings_setup"
            android:parentActivityName="flaregradle.myapp.com.Flare.Activities.FlareHome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="flaregradle.myapp.com.Flare.Activities.FlareHome" />
        </activity>

        <receiver
            android:name="flaregradle.myapp.com.Flare.Services.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="flaregradle.myapp.com.flare" />
            </intent-filter>
        </receiver>

        <service android:name="flaregradle.myapp.com.Flare.Services.GcmIntentService" />
