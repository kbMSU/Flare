<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/background_material_dark">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/toolbar"
                    android:background="@color/background_material_dark">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@id/map"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:name="com.google.android.gms.maps.MapFragment"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/search_layout"
            android:weightSum="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/search_layout"
                android:src="@drawable/magnifying_glass"
                android:layout_gravity="center_vertical"
                android:onClick="onLocationLookupClick"/>

            <TextView
                android:layout_weight="0.90"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:gravity="center_vertical"
                android:background="@drawable/search_layout"
                android:textColor="@color/black"
                android:textColorHint="@color/greyLight"
                android:id="@id/searchLocationText"
                android:onClick="onLocationLookupClick"
                android:clickable="true"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/search_layout"
                android:src="@android:drawable/ic_menu_mylocation"
                android:layout_gravity="center_vertical"
                android:onClick="onUpdateLocationClick"/>

        </LinearLayout>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            fab:fab_addButtonColorNormal="@color/fabColor"
            fab:fab_addButtonColorPressed="@color/grey"
            fab:fab_addButtonPlusIconColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/fabColor"
                fab:fab_colorPressed="@color/grey"
                android:id="@id/fabGroups"
                android:onClick="onGroupsClick"
                fab:fab_icon="@drawable/contact_group_fab"
                fab:fab_size="normal"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/fabColor"
                fab:fab_colorPressed="@color/grey"
                android:id="@id/fabSendFlare"
                android:onClick="onSendFlareClick"
                fab:fab_icon="@drawable/send_reg_icon_transparent"
                fab:fab_size="normal"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>


</RelativeLayout>


