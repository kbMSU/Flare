<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="flaregradle.myapp.com.Flare.SendFlareActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyDark"
        android:id="@id/sendFlareScreen">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/phone"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/search"
            android:inputType="text"
            android:drawableLeft="@drawable/magnifying_glass"
            android:drawableStart="@drawable/magnifying_glass"
            android:background="@color/greyLight"/>

        <ListView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/contactsHome"
            android:layout_below="@id/phone"
            android:layout_above="@id/sendFlareLayout"
            android:background="@color/greyDark"/>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:id="@id/sendFlareLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:background="@color/greyDark"
                android:layout_alignParentBottom="true">

                <EditText android:id="@id/writeMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/writeMessage"
                    android:inputType="text"
                    android:drawableStart="@drawable/write_icon"
                    android:drawableLeft="@drawable/write_icon"
                    android:layout_weight="0.86"/>

                <Button android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="onSendClick"
                    android:id="@id/send_flare"
                    android:background="@drawable/send_button"
                    android:layout_weight="0.13"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyLight"
        android:id="@id/overlay"
        android:visibility="gone">
    </FrameLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@id/busyIndicator"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="?android:attr/progressBarStyle"/>

</RelativeLayout>
